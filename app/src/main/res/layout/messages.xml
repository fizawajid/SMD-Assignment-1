    <!-- Added messages header with back arrow, username, and plus icon -->
    <LinearLayout
        android:id="@+id/messages_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/battery">

        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_right"
            android:contentDescription="back"
            android:clickable="true"
            android:focusable="true"
            android:background="@null"
            app:tint="@color/pink"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jacob_w"
                android:textSize="18sp"
                android:textColor="@color/pink"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/arrowd"
                android:layout_marginStart="4dp"
                android:contentDescription="dropdown"
                app:tint="@color/pink" />

        </LinearLayout>

        <ImageView
            android:id="@+id/add_message"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/plus"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="add message"
            app:tint="@color/pink" />

    </LinearLayout>

    <!-- Added search bar -->
