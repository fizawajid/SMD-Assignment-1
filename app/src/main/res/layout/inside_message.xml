<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header with battery/status -->
    <LinearLayout
        android:id="@+id/battery"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

<!--        <ImageView-->
<!--            android:id="@+id/headertime"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="90dp"-->
<!--            android:src="@drawable/time"-->
<!--            android:contentDescription="header time" />-->

<!--        <View-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1" />-->

<!--        <ImageView-->
<!--            android:id="@+id/headerImage"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="90dp"-->
<!--            android:src="@drawable/levels"-->
<!--            android:contentDescription="header levels" />-->

    </LinearLayout>

    <!-- Chat header with back arrow, profile, and options -->
    <LinearLayout
        android:id="@+id/chat_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/battery">

        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_right"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="back"
            app:tint="@color/pink"
            android:background="@null"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/joshua"

            android:layout_marginStart="16dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="joshua_l"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/videocall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/vcall"
            android:background="@null"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="info"
            android:layout_marginEnd="14dp"/>



        <ImageView
            android:id="@+id/info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/warning"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="info"

             />

    </LinearLayout>

    <!-- Messages container -->
    <ScrollView
        android:id="@+id/messages_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/chat_header"
        app:layout_constraintBottom_toTopOf="@id/input_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Received Message 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="60dp"
                    android:background="@drawable/message_recieved_bg"
                    android:text="Hello! How are you doing?"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:maxWidth="280dp" />

            </LinearLayout>

            <!-- Time stamp -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:49 PM"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp" />

            <!-- Sent Message 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:background="@drawable/message_sent_bg"
                    android:text="Hello"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:maxWidth="280dp" />

            </LinearLayout>

            <!-- Received Message 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="60dp"
                    android:background="@drawable/message_recieved_bg"
                    android:text="I wanted to reach out about the internship program we discussed earlier. Are you still interested?"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:maxWidth="280dp" />

            </LinearLayout>

            <!-- Sent Message 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:background="@drawable/message_sent_bg"
                    android:text="Yes, absolutely! I'm very interested. Could you share more details about the requirements?"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:maxWidth="280dp" />

            </LinearLayout>

            <!-- Received Message 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="60dp"
                    android:background="@drawable/message_recieved_bg"
                    android:text="Great! I'll send you the application form and guidelines"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:maxWidth="280dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="70dp"
                    android:background="@drawable/message_recieved_bg"
                    android:text="Have a nice day"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:maxWidth="280dp" />

            </LinearLayout>


            <!-- Add some bottom spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Message input container -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/attach_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/plus"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="attach"
            app:tint="#A0665C"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/message_input"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Message..."
            android:textColorHint="#999999"
            android:textColor="#333333"
            android:textSize="16sp"

            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/camera_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/camera"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="camera"
            app:tint="#A0665C"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/send_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="send"
            app:tint="#A0665C" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>