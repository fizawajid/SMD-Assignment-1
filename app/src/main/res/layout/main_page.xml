<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Header: Battery -->
    <LinearLayout
        android:id="@+id/battery"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical" />

    <!-- Message Bar -->
    <LinearLayout
        android:id="@+id/messagebar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/camera"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="camera"
            app:tint="@color/pink" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Socially"
            android:textStyle="bold"
            android:textColor="@color/pink"
            android:textSize="20sp"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/reel"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/reels"
            android:background="@android:color/transparent"
            android:contentDescription="reel"
            android:layout_marginEnd="16dp"
            app:tint="@color/pink" />

        <ImageButton
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/share"
            android:background="@android:color/transparent"
            android:contentDescription="message"
            app:tint="@color/pink" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Stories -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <!-- Example Story -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/storyImage"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/jacob"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:clickable="true"
                                android:focusable="true"
                                app:civ_border_width="2dp"
                                app:civ_border_color="@android:color/holo_red_light" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Story"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Story 1 - karenme -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:scaleType="centerCrop" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/storyImage1"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/download"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:clickable="true"
                                android:focusable="true"
                                app:civ_border_width="2dp"
                                app:civ_border_color="@android:color/holo_red_light"/>

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="karenme"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Story 2 - zachjohn -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:scaleType="centerCrop" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/storyImage2"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/girl1"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:clickable="true"
                                android:focusable="true"
                                app:civ_border_width="2dp"
                                app:civ_border_color="@android:color/holo_red_light"/>

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="zachjohn"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Story 3 - kieron_d -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:scaleType="centerCrop" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/storyImage3"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/male"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                app:civ_border_width="2dp"
                                app:civ_border_color="@android:color/holo_red_light"/>

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kieron_d"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Story 4 - craig -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:scaleType="centerCrop" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/storyImage4"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/avatar"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                app:civ_border_width="2dp"
                                app:civ_border_color="@android:color/holo_red_light"/>

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="craig"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>


                    <!-- Duplicate other stories here like karenme, zachjohn, etc. -->
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="8dp" />

            <!-- Example Post -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Post Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/joshua"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="joshua_l"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tokyo, Japan"
                            android:textSize="12sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/options1"
                        android:background="@android:color/transparent"
                        android:contentDescription="more options" />
                </LinearLayout>

                <!-- Post Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/joshua" />

                <!-- Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/like"
                        android:background="@android:color/transparent"
                        android:contentDescription="like" />

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/comment"
                        android:layout_marginStart="16dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="comment" />

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/share"
                        android:layout_marginStart="16dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="share" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/save"
                        android:background="@android:color/transparent"
                        android:contentDescription="save" />
                </LinearLayout>

                <!-- Likes -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Liked by craig_love and 44,686 others"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <!-- Caption -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="joshua_l"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" The game in Japan was amazing and I want to share some photos"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:background="@android:color/transparent"
            android:contentDescription="home" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:background="@android:color/transparent"
            android:contentDescription="search" />

        <ImageButton
            android:id="@+id/create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/create"
            android:background="@android:color/transparent"
            android:contentDescription="create" />

        <ImageButton
            android:id="@+id/liked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/like"
            android:background="@android:color/transparent"
            android:contentDescription="liked" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profile"
            android:background="@android:color/transparent"
            android:contentDescription="profile" />
    </LinearLayout>

</LinearLayout>
