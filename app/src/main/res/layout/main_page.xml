<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Added existing header sections -->
    <LinearLayout
        android:id="@+id/battery"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/headertime"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/Time"
            android:contentDescription="header time" />

        <!-- empty view to take on middle space -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/Levels"
            android:contentDescription="header levels" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/messagebar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/battery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/Camera"
            app:tint="@color/pink"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="header time" />

        <!-- empty view to take on middle space -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Socially"
            android:textStyle="bold"
            android:textColor="@color/pink"
            android:textSize="20sp"
            android:gravity="center"
            />

        <ImageButton
            android:id="@+id/reel"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/Reels"
            android:background="@android:color/transparent"
            android:contentDescription="header levels"
            android:layout_marginEnd="16dp"
            app:tint="@color/pink"
            />

        <ImageButton
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/Share"
            app:tint="@color/pink"
            android:background="@android:color/transparent"
            android:contentDescription="header levels" />

    </LinearLayout>

    <!-- Added main content area with stories and post -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/messagebar"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Stories Section -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <!-- Your Story -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/story_gradient_border"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_background"
                                android:src="@drawable/Time"
                                android:scaleType="centerCrop" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Story"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Story 1 - karenme -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/story_gradient_border"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_background"
                                android:src="@drawable/Time"
                                android:scaleType="centerCrop" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="karenme"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Story 2 - zachjohn -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/story_gradient_border"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_background"
                                android:src="@drawable/Time"
                                android:scaleType="centerCrop" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="zachjohn"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Story 3 - kieron_d -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/story_gradient_border"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_background"
                                android:src="@drawable/Time"
                                android:scaleType="centerCrop" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kieron_d"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Story 4 - craig -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/story_gradient_border"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_background"
                                android:src="@drawable/Time"
                                android:scaleType="centerCrop" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="craig"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="8dp" />

            <!-- Main Post -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Post Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/Time"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="joshua_l"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/Time"
                                android:layout_marginStart="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tokyo, Japan"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/Time"
                        android:background="@android:color/transparent"
                        android:contentDescription="more options" />

                </LinearLayout>

                <!-- Post Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/Time" />

                <!-- Post Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/Like"
                        android:background="@android:color/transparent"
                        android:contentDescription="like" />

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/Comment"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="16dp"
                        android:contentDescription="comment" />

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/Share"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="16dp"
                        android:contentDescription="share" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/save"
                        android:background="@android:color/transparent"
                        android:contentDescription="save" />

                </LinearLayout>

                <!-- Likes Count -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/Like"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liked by "
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="craig_love"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" and "
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="44,686 others"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                </LinearLayout>

                <!-- Post Caption -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="joshua_l"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" The game in Japan was amazing and I want to share some photos"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Added existing footer section -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/Home"
            android:background="@android:color/transparent"
            android:contentDescription="home" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/Search"
            android:background="@android:color/transparent"
            android:contentDescription="search" />

        <ImageButton
            android:id="@+id/create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/Create"
            android:background="@android:color/transparent"
            android:contentDescription="create" />

        <ImageButton
            android:id="@+id/reels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/Reels"
            android:background="@android:color/transparent"
            android:contentDescription="reels" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/Profile"
            android:background="@android:color/transparent"
            android:contentDescription="profile" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
