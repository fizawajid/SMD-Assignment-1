<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Camera Preview Area -->
    <View
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/camera_controls_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingClass"
        android:background="@drawable/coffee"/>

    <!-- Top Controls Overlay -->
    <LinearLayout
        android:id="@+id/top_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/setting"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@color/black"
            android:contentDescription="settings"
            android:background="?attr/selectableItemBackgroundBorderless"
             />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">



            <ImageView
                android:id="@+id/arrowright"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/arrow_right"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="settings"
                app:tint="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

    <!-- Camera Controls Section -->
    <LinearLayout
        android:id="@+id/camera_controls_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Main Camera Controls -->
        <LinearLayout
            android:id="@+id/main_camera_controls"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Gallery Thumbnail -->
            <ImageView
                android:id="@+id/gallery_thumbnail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/coffee"
                android:scaleType="centerCrop"

                android:clickable="true"
                android:focusable="true"
                android:contentDescription="gallery" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Capture Button -->
            <LinearLayout
                android:id="@+id/capture_button_container"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/capture_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/capture_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="capture"
                    android:background="@drawable/capture_button_bg" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Camera Flip -->
            <ImageView
                android:id="@+id/camera_flip"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/cameraflip"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="flip camera"
                android:padding="8dp"
                 />

        </LinearLayout>

        <!-- Camera Mode Selector -->
        <LinearLayout
            android:id="@+id/camera_modes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="16dp">

            <!-- Type Mode -->
            <TextView
                android:id="@+id/mode_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:textSize="12sp"
                android:textColor="#888888"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="16dp" />

            <!-- Live Mode -->
            <TextView
                android:id="@+id/mode_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textSize="12sp"
                android:textColor="#888888"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="16dp" />

            <!-- Normal Mode (Selected) -->
            <TextView
                android:id="@+id/mode_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NORMAL"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="16dp" />

            <!-- Boomerang Mode -->
            <TextView
                android:id="@+id/mode_boomerang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOMERANG"
                android:textSize="12sp"
                android:textColor="#888888"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="16dp" />

            <!-- Super Mode -->
            <TextView
                android:id="@+id/mode_super"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUPER"
                android:textSize="12sp"
                android:textColor="#888888"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Recording Indicator (Hidden by default) -->
        <LinearLayout
            android:id="@+id/recording_indicator"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:visibility="gone">

            <View
                android:id="@+id/recording_progress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FF4444" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>