<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:paddingTop="30dp"> <!-- Added padding to prevent overlap with system icons -->

    <!-- Story Progress Indicator -->
    <LinearLayout
        android:id="@+id/story_progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="#FFFFFF" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="#80FFFFFF" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="#80FFFFFF" />

    </LinearLayout>

    <!-- Story Header -->
    <LinearLayout
        android:id="@+id/story_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/storyImage3"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/jacob" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highlight"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="December 3, 2023"
                    android:textColor="#CCFFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="in Artist • Song Title ›"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close"
            android:contentDescription="back"
            android:clickable="true"
            android:focusable="true"
            android:background="@null" />


    </LinearLayout>

    <!-- Story Content Image -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/story_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee" />

        <!-- Heart Animation Overlay (for likes) -->
        <ImageView
            android:id="@+id/heart_animation"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:alpha="0"
            android:src="@drawable/like"
            android:visibility="gone"
            app:tint="#FF4444" />

        <!-- Invisible touch areas for navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/left_touch_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:id="@+id/right_touch_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </FrameLayout>

    <!-- Story Controls Bottom -->
    <LinearLayout
        android:id="@+id/story_controls"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Activity Button -->
        <LinearLayout
            android:id="@+id/activity_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/activity"
                android:contentDescription="activity"
                android:background="@null"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Activity"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Create Button -->
        <LinearLayout
            android:id="@+id/create_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/create"
                android:contentDescription="create"
                android:background="@null"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Create"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Create Post Button -->
        <LinearLayout
            android:id="@+id/create_post_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/createpost"
                android:contentDescription="createpost"
                android:background="@null"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Create Post"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Browse Button -->
        <LinearLayout
            android:id="@+id/browse_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/browse"
                android:contentDescription="browse"
                android:background="@null"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Browse"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Send Button -->
        <LinearLayout
            android:id="@+id/send_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/share"
                android:contentDescription="send"
                android:background="@null"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Send"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- More Button -->
        <LinearLayout
            android:id="@+id/more_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/optionbtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/options"
                android:contentDescription="back"
                android:clickable="true"
                android:focusable="true"
                android:background="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="More"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>