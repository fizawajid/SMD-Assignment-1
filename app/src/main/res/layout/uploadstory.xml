<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:ignore="ExtraText">

    <!-- Story Image -->
    <ImageView
        android:id="@+id/storyImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/coffee"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top gradient overlay -->
    <View
        android:id="@+id/topGradient"
        android:layout_width="0dp"
        android:layout_height="120dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top toolbar with icons -->
    <LinearLayout
        android:id="@+id/topToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:paddingTop="24dp"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Close button -->
        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/close"

            android:scaleType="center"
            app:tint="#FFFFFF"
            android:layout_marginEnd="12dp" />

        <!-- Brush/Draw button -->
        <ImageButton
            android:id="@+id/brushButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/partnership"

            android:scaleType="center"
            app:tint="#FFFFFF"
            android:layout_marginEnd="12dp" />

        <!-- Text button -->
        <ImageButton
            android:id="@+id/textButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/text"

            android:scaleType="center"
            app:tint="#FFFFFF"
            android:layout_marginEnd="12dp" />

        <!-- Sticker button -->
        <ImageButton
            android:id="@+id/stickerButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/stickers"

            android:scaleType="center"
            app:tint="#FFFFFF"
            android:layout_marginEnd="12dp" />

        <!-- Music button -->
        <ImageButton
            android:id="@+id/musicButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/music"

            android:scaleType="center"
            app:tint="#FFFFFF"
            android:layout_marginEnd="12dp" />

        <!-- Effect button -->
        <ImageButton
            android:id="@+id/effectButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/filters"

            android:scaleType="center"
            app:tint="#FFFFFF"
            android:layout_marginEnd="12dp" />

        <!-- More options button -->
        <ImageButton
            android:id="@+id/moreButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/options"

            android:scaleType="center"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <!-- Bottom container -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A1A1A"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Story navigation buttons -->
        <LinearLayout
            android:id="@+id/storyNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <!-- Your stories button -->
            <LinearLayout
                android:id="@+id/yourStoriesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/jacob"
                    app:tint="#FF6B6B"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your stories"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <!-- Close Friends button -->
            <LinearLayout
                android:id="@+id/closeFriendsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/like"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close Friends"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_left1"
                    app:tint="#FFFFFF"
                    android:layout_marginStart="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>