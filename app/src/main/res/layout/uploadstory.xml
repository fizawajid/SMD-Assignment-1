<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="25dp"
    tools:ignore="ExtraText">

    <!-- Top spacer to prevent overlap with system icons -->
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <!-- Main content container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Story Image -->
        <ImageView
            android:id="@+id/storyImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee" />

        <!-- Top gradient overlay -->
        <View
            android:id="@+id/topGradient"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <!-- Top toolbar with icons - Fixed to fit screen -->
        <LinearLayout
            android:id="@+id/topToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            android:elevation="20dp"
            android:weightSum="7">

            <!-- Close button -->
            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/close"
                android:scaleType="center"
                app:tint="#FFFFFF"
                android:layout_marginHorizontal="4dp" />

            <!-- Brush/Draw button -->
            <ImageButton
                android:id="@+id/brushButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/partnership"
                android:scaleType="center"
                app:tint="#FFFFFF"
                android:layout_marginHorizontal="4dp" />

            <!-- Text button -->
            <ImageButton
                android:id="@+id/textButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/text"
                android:scaleType="center"
                app:tint="#FFFFFF"
                android:layout_marginHorizontal="4dp" />

            <!-- Sticker button -->
            <ImageButton
                android:id="@+id/stickerButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/stickers"
                android:scaleType="center"
                app:tint="#FFFFFF"
                android:layout_marginHorizontal="4dp" />

            <!-- Music button -->
            <ImageButton
                android:id="@+id/musicButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/music"
                android:scaleType="center"
                app:tint="#FFFFFF"
                android:layout_marginHorizontal="4dp" />

            <!-- Effect button -->
            <ImageButton
                android:id="@+id/effectButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/filters"
                android:scaleType="center"
                app:tint="#FFFFFF"
                android:layout_marginHorizontal="4dp" />

            <!-- More options button -->
            <ImageButton
                android:id="@+id/moreButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/options"
                android:scaleType="center"
                app:tint="#FFFFFF"
                android:layout_marginHorizontal="4dp" />

        </LinearLayout>
    </FrameLayout>

    <!-- Bottom container -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A1A1A"
        android:padding="16dp">

        <!-- Story navigation buttons -->
        <LinearLayout
            android:id="@+id/storyNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <!-- Your stories button -->
            <LinearLayout
                android:id="@+id/yourStoriesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/simplestory"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:src="@drawable/story"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true" />

            </LinearLayout>

            <!-- Close Friends button -->
            <LinearLayout
                android:id="@+id/closeFriendsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/closestory"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:src="@drawable/closestory"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arroww_right"
                    app:tint="#FFFFFF"
                    android:layout_marginStart="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>