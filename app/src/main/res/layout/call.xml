<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B47067"
    android:gravity="center">

    <!-- Profile Picture -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/joshua"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:layout_marginBottom="24dp" />

    <!-- Contact Name -->
    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joshua_I"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- Call Timer -->
    <TextView
        android:id="@+id/call_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="50dp" />

    <!-- Call Control Buttons -->
    <LinearLayout
        android:id="@+id/call_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- Messages Button -->
        <LinearLayout
            android:id="@+id/messages_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/call_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="40dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/create"
                android:contentDescription="messages"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- End Call Button -->
        <LinearLayout
            android:id="@+id/end_call_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/end_call_button"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="40dp">

            <ImageButton
                android:id="@+id/phoneend3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/phoneend"
                android:background="@null"
                android:scaleType="centerInside"
                android:contentDescription="end call" />
        </LinearLayout>

        <!-- Speaker Button -->
        <LinearLayout
            android:id="@+id/speaker_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/call_button_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/volume"
                android:contentDescription="speaker"
                app:tint="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
